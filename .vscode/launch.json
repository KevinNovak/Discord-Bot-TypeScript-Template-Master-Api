{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Dev",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
            "args": ["--watch", "src/**/*.ts,config/**/*.json", "${workspaceFolder}/src/app.ts"],
            "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**"],
            "restart": true
        },
        {
            "name": "Start",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "preLaunchTask": "tsc",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "program": "${workspaceFolder}\\dist\\app.js",
            "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**"],
            "restart": false
        }
    ]
}
